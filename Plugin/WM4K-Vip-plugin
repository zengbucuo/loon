[General]
force-http-engine-hosts = :8762

[Script]
# 4k跳转播放
http-request https?:\/\/(omts\.tc\.qq\.com|v16m-default.akamaized.net)\/[^\s]+(m3u8|video_mp4)[^\s]* script-path=https://raw.githubusercontent.com/Alex0510/Eric/refs/heads/master/surge/Script/4k.js, tag=4k视频跳转播放
# 完美4k解锁Vip
http-response http://111.229.140.167:8762/apptov5/v1/vod/getVod script-path=https://raw.githubusercontent.com/Alex0510/Eric/refs/heads/master/surge/Script/wm4k.js, requires-body=true, tag=完美4k解锁Vip

[MITM]
hostname = 111.229.140.167:8762, omts.tc.qq.com, v16m-default.akamaized.net